# Archivo de ejemplo para producción
# Copiar a .env y configurar los valores correctos

PORT=3002
NODE_ENV=production

# Base de datos PostgreSQL
DATABASE_URL=postgresql://usuario:password@localhost:5432/crm_tpv
LEADS_DATABASE_URL=postgresql://usuario:password@localhost:5432/crm_tpv

# JWT Secret (generar uno único para producción)
JWT_SECRET=tu_jwt_secret_aqui

# URL del frontend
FRONTEND_URL=https://tu-dominio.com

# SMTP (correo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password

# Pusher (notificaciones en tiempo real)
PUSHER_APP_ID=tu_app_id
PUSHER_KEY=tu_key
PUSHER_SECRET=tu_secret
PUSHER_CLUSTER=eu
